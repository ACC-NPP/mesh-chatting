{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"name": "mesh-chatting network",
			"program": "${workspaceFolder}/server.js",
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen",
			"name": "mesh-chatting localhost",
			"program": "${workspaceFolder}/server.js",
			"env": {
				"LOCAL_RUN": "true"
			},
			"request": "launch",
			"restart": true,
			"runtimeExecutable": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "mesh node 1",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/server.js",
			"env": {
				"PORT": "5001",
				"LOCAL_RUN": "true"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "mesh node 2",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/server.js",
			"env": {
				"PORT": "5002",
				"LOCAL_RUN": "true"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "mesh node 3",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/server.js",
			"env": {
				"PORT": "5003",
				"LOCAL_RUN": "true"
			}
		}
	]
}